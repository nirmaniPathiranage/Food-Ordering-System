<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Add a new Menu"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>

            <!-- Menu ID Label -->
            <TextView
                android:text="Select Menu ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/editText_menuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/menuid"/>

            <!-- Food Code Label -->
            <TextView
                android:text="Food Code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_foodcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>

            <!-- Food Name -->
            <TextView
                android:text="Food Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_foodname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>

            <!-- Food Type -->
            <TextView
                android:text="Food Type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_foodtype"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>

            <!-- Recipe -->
            <TextView
                android:text="Recipe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_recipe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>

            <!-- Price -->
            <TextView
                android:text="Price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>

            <!--Add Button -->
            <Button
                android:id="@+id/button_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Add Menu"
                android:textSize="30dp"/>

            <!--View all Button -->
            <Button
                android:id="@+id/button_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="View Menu"
                android:textSize="30dp"/>

            <!--Update Button -->
            <Button
                android:id="@+id/button_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Update Menu"
                android:textSize="30dp"/>

            <!--Delete Button -->
            <Button
                android:id="@+id/button_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Delete Menu"
                android:textSize="30dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>